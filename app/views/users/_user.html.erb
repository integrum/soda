<div class="userListItem">
    <dl>
	<dt><img src="<%= gravatar user.email, :size=>16 %>" 
		style="width:16px;height:16px;" />
		<%= link_to h("#{user.name} (#{user.login})"), user_path(user) %>
		<% if user.admin? %><span class="adminBadge">admin</span><% end %>
		<% unless current_user.blank? or !current_user.admin? %>
			<% link_to "Delete Forever", {:action=>'destroy', :id => user.id} 
			#disabled. TODO: move to show.html.erb
			%>
		<% end %>
	</dt>
		<% if user.skills.length > 0 %>
			<dd>Skills: <%= h user.skills.join(', ') %></dd>
		<% end %>
	</dl>
</div>